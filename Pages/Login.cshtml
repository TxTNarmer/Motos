                <input type="text" class="form-control" id="Correo" name="NombreUsuario" value="@Model.NombreUsuario" placeholder="Ingrese su usuario" />
            </div>
            <div class="mb-3">
                <label for="contrasena" class="form-label">Contrase침a</label>
                <input type="password" class="form-control" id="contrasena" name="Contrasena" placeholder="Ingrese su contrase침a" />
            </div>
            <button type="submit" class="btn btn-success w-100">Ingresar</button>
        </form>

        
    </div>
</div>

<footer>
    <div class="footer-container">
        <p>&copy; 2025 Refaccionaria MotoExpress. Todos los derechos reservados.</p>
    </div>
</footer>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background: url('/imagenes/motos_background.jpeg') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-panel {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
    }

    .login-container h1 {
        color: #2c3e50;
        font-size: 1.8rem;
        font-weight: bold;
    }

    .btn {
        background-color: #28a745;
        color: #fff;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #218838;
    }

    footer {
        margin-top: 1rem;
        text-align: center;
        color: #fff;
    }

    .footer-container {
        background-color: rgba(0, 0, 0, 0.7);
