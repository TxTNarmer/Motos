@page
@model LoginModel
@{
    ViewData["Title"] = "Inicio de Sesi칩n";
}

<div class="login-panel">
    <!-- Panel de inicio de sesi칩n centrado -->
    <div class="login-container">
        <h1 class="text-center mb-4">Refaccionaria MotoExpress</h1>

        <!-- Mensaje de error -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
