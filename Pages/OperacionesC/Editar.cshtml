@page 
@model Motos.Pages.OperacionesC.EditarModel
@{
    ViewData["Title"] = "Editar Orden";
}

<style>
    /* Estilo general de la página */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }

    /* Contenedor principal con margen superior */
    .container {
        margin-top: 50px;
    }

    /* Estilo para la tarjeta de formulario */
    .form-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Título */
    h2 {
        color: #007bff;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Etiquetas de los campos */
    .form-label {
        font-weight: bold;
        color: #333;
    }

    /* Campos de texto */
    .form-control {
        border-radius: 4px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
    }

    /* Estilo para los mensajes de error */
    .text-danger {
        font-size: 0.875rem;
        color: #dc3545;
    }

    /* Botones */
    .btn {
        font-size: 1rem;
        padding: 10px 15px;
        border-radius: 5px;
        z-index: 1000;
        position: relative;
        pointer-events: auto;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        z-index: 1000;
        position: relative;
        pointer-events: auto;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        z-index: 1000;
        position: relative;
        pointer-events: auto;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        z-index: 1000;
        position: relative;
        pointer-events: auto;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
        z-index: 1000;
        position: relative;
        pointer-events: auto;
    }


    .d-flex {
        justify-content: space-between;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto form-container">
            <h2>Editar Orden</h2>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>@Model.ErrorMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">ID de la orden</label>
                    <input class="form-control-plaintext" readonly asp-for="IdOrden" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Dueño</label>
                    <input class="form-control" asp-for="Dueño" />
                    <span class="text-danger" asp-validation-for="Dueño"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Servicio</label>
                    <input class="form-control" asp-for="Servicio" />
                    <span class="text-danger" asp-validation-for="Servicio"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">ID del encargado</label>
                    <input class="form-control" asp-for="EncargadoId" />
                    <span class="text-danger" asp-validation-for="EncargadoId"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Pago</label>
                    <input class="form-control" asp-for="Pago" />
                    <span class="text-danger" asp-validation-for="Pago"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Teléfono</label>
                    <input class="form-control" asp-for="Telefono" />
                    <span class="text-danger" asp-validation-for="Telefono"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Notas</label>
                    <textarea class="form-control" asp-for="Notas" rows="3"></textarea>
                    <span class="text-danger" asp-validation-for="Notas"></span>
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a class="btn btn-secondary" href="/OperacionesC/Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
